\begin_layout Plain Layout

\lang english
\begin_inset Formula 
\[
\left\Vert A\right\Vert _{F}^{2}=\sum_{i=1}^{n}\lambda_{i\left\{ A^{T}A\right\} }
\]

\end_inset


\end_layout

\end_inset


\begin_inset Formula 
\[
\blacksquare
\]

\end_inset


\end_layout

\begin_layout Subsection*

\lang english
b)
\end_layout

\begin_layout Standard
\noindent

\lang english
prove that:
\begin_inset Formula 
\[
\frac{1}{\sqrt{n}}\left\Vert A\right\Vert _{\infty}\leq\left\Vert A\right\Vert _{2}\leq\sqrt{m}\left\Vert A\right\Vert _{\infty}
\]

\end_inset


\end_layout

\begin_layout Standard
\noindent

\lang english
let's first prove a similar inequality for vectors:
\end_layout

\begin_layout Standard
\noindent

\lang english
let 
\begin_inset Formula $x\in\mathbb{R}^{n}$
\end_inset

 then:
\begin_inset Formula 
\[
n\left\Vert x\right\Vert _{\infty}^{2}=\sum_{i=1}^{n}\left\Vert x\right\Vert _{\infty}^{2}\geq\sum_{i=1}^{n}x_{i}^{2}=\left\Vert x\right\Vert _{2}^{2}
\]

\end_inset


\begin_inset Formula 
\[
\sqrt{n}\left\Vert x\right\Vert _{\infty}\geq\left\Vert x\right\Vert _{2}
\]

\end_inset


\end_layout

\begin_layout Standard
\noindent

\lang english
and:
\begin_inset Formula 
\[
\left\Vert x\right\Vert _{\infty}=\sqrt{\left\Vert x\right\Vert _{\infty}^{2}}\leq\sqrt{\sum_{i=1}^{n}x_{i}^{2}}=\left\Vert x\right\Vert _{2}
\]

\end_inset

 hence:
\begin_inset Formula 
\[
\left\Vert x\right\Vert _{\infty}\leq\left\Vert x\right\Vert _{2}\leq\sqrt{n}\left\Vert x\right\Vert _{\infty}
\]

\end_inset


\end_layout

\begin_layout Standard
\noindent

\lang english
now moving to matrices:
\end_layout

\begin_layout Standard
\noindent

\lang english
let's start from the right side
\begin_inset Formula 
\[
\left\Vert A\right\Vert _{2}=\max_{x\in R^{n}}\left\{ \left\Vert Ax\right\Vert _{2}:\left\Vert x\right\Vert _{2}\leq1\right\} 
\]

\end_inset


\end_layout

\begin_layout Standard
\noindent

\lang english
for 
\begin_inset Formula $\left\Vert x\right\Vert _{2}\leq1$
\end_inset

:
\begin_inset Formula 
\[
\left\Vert Ax\right\Vert _{2}\leq\sqrt{m}\left\Vert Ax\right\Vert _{\infty}\leq\sqrt{m}\left\Vert A\right\Vert _{\infty}\left\Vert x\right\Vert _{\infty}\leq\sqrt{m}\left\Vert A\right\Vert _{\infty}\left\Vert x\right\Vert _{2}\leq\sqrt{m}\left\Vert A\right\Vert _{\infty}
\]

\end_inset

hence:
\begin_inset Formula 
\[
\left\Vert A\right\Vert _{2}=\max_{x\in R^{n}}\left\{ \left\Vert Ax\right\Vert _{2}:\left\Vert x\right\Vert _{2}\leq1\right\} \leq\max_{x\in R^{n}}\left\{ \sqrt{m}\left\Vert A\right\Vert _{\infty}:\left\Vert x\right\Vert _{2}\leq1\right\} =\sqrt{m}\left\Vert A\right\Vert _{\infty}
\]

\end_inset


\begin_inset Formula 
\[
\left\Vert A\right\Vert _{2}\leq\sqrt{m}\left\Vert A\right\Vert _{\infty}
\]

\end_inset


\end_layout

\begin_layout Standard
\noindent

\lang english
for the left, side:
\begin_inset Formula 
\[
\left\Vert A\right\Vert _{\infty}=\max_{x\in R^{n}}\left\{ \left\Vert Ax\right\Vert _{\infty}:\left\Vert x\right\Vert _{\infty}\leq1\right\} 
\]

\end_inset


\end_layout

\begin_layout Standard
\noindent

\lang english
for 
\begin_inset Formula $\left\Vert x\right\Vert _{\infty}\leq1$
\end_inset


\begin_inset Formula 
\[
\left\Vert Ax\right\Vert _{\infty}\leq\left\Vert Ax\right\Vert _{2}\leq\left\Vert A\right\Vert _{2}\left\Vert x\right\Vert _{2}\leq\left\Vert A\right\Vert _{2}\sqrt{n}\left\Vert x\right\Vert _{\infty}\leq\sqrt{n}\left\Vert A\right\Vert _{2}
\]

\end_inset


\end_layout

\begin_layout Standard
\noindent

\lang english
hence:
\begin_inset Formula 
\[
\left\Vert A\right\Vert _{\infty}=\max_{x\in R^{n}}\left\{ \left\Vert Ax\right\Vert _{\infty}:\left\Vert x\right\Vert _{\infty}\leq1\right\} \leq\max_{x\in R^{n}}\left\{ \sqrt{n}\left\Vert A\right\Vert _{2}:\left\Vert x\right\Vert _{\infty}\leq1\right\} =\sqrt{n}\left\Vert A\right\Vert _{2}
\]

\end_inset


\begin_inset Formula 
\[
\frac{1}{\sqrt{n}}\left\Vert A\right\Vert _{\infty}\leq\left\Vert A\right\Vert _{2}
\]

\end_inset

to summarize:
\end_layout

\begin_layout Standard
\noindent

\lang english
\begin_inset Box Boxed
position "t"
hor_pos "c"
has_inner_box 1
inner_pos "t"
use_parbox 0
use_makebox 0
width "100col%"
special "none"
