\begin_layout Plain Layout

\lang english
\begin_inset Formula 
\[
\nabla^{2}f\left(x\right)=A+A^{T}
\]

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Subsection*

\lang english
b)
\end_layout

\begin_layout Standard
\noindent

\lang english
\begin_inset Formula 
\[
f\left(x\right)=\left|\left\Vert x-a\right\Vert _{2}-\delta\right|
\]

\end_inset


\begin_inset Formula 
\[
f^{'}\left(x;d\right)=\lim_{t\rightarrow0^{+}}\frac{f\left(x+td\right)-f\left(x\right)}{t}=\lim_{t\rightarrow0^{+}}\frac{\left|\left\Vert x+td-a\right\Vert _{2}-\delta\right|-\left|\left\Vert x-a\right\Vert _{2}-\delta\right|}{t}
\]

\end_inset

if 
\begin_inset Formula $\left\Vert x-a\right\Vert _{2}>\delta>0$
\end_inset

 there exists small enough 
\begin_inset Formula $t$
\end_inset

 such that: 
\begin_inset Formula 
\[
\left|\left\Vert x+td-a\right\Vert _{2}-\delta\right|=\left\Vert x+td-a\right\Vert _{2}-\delta
\]

\end_inset

and then:
\begin_inset Formula 
\[
f^{'}\left(x;d\right)=\lim_{t\rightarrow0^{+}}\frac{\left\Vert x+td-a\right\Vert _{2}-\delta-\left\Vert x-a\right\Vert _{2}+\delta}{t}=\lim_{t\rightarrow0^{+}}\frac{\left\Vert x-a+td\right\Vert _{2}-\left\Vert x-a\right\Vert _{2}}{t}
\]

\end_inset

this is exactly the definition of the directional derivative of the 
\begin_inset Formula $l_{2}$
\end_inset

 norm of 
\begin_inset Formula $\left(x-a\right)$
\end_inset

 which we saw in the tutorial equals to (when 
\begin_inset Formula $\left\Vert x-a\right\Vert _{2}>0$
\end_inset

):
\begin_inset Formula 
\[
f^{'}\left(x;d\right)=\frac{d^{T}\left(x-a\right)}{\left\Vert x-a\right\Vert _{2}}
\]

\end_inset


\end_layout

\begin_layout Standard
\noindent

\lang english
if 
\begin_inset Formula $\left\Vert x-a\right\Vert _{2}<\delta$
\end_inset

 there exists small enough 
\begin_inset Formula $t$
\end_inset

 such that: 
\begin_inset Formula 
\[
\left|\left\Vert x+td-a\right\Vert _{2}-\delta\right|=\delta-\left\Vert x+td-a\right\Vert _{2}
\]

\end_inset

and then:
\begin_inset Formula 
\begin{align*}
f^{'}\left(x;d\right) & =\lim_{t\rightarrow0^{+}}\frac{\delta-\left\Vert x+td-a\right\Vert _{2}+\left\Vert x-a\right\Vert _{2}-\delta}{t}=\lim_{t\rightarrow0^{+}}-\frac{\left\Vert x-a+td\right\Vert _{2}-\left\Vert x-a\right\Vert _{2}}{t}=\\
 & =-\lim_{t\rightarrow0^{+}}\frac{\left\Vert x-a+td\right\Vert _{2}-\left\Vert x-a\right\Vert _{2}}{t}
\end{align*}

\end_inset

which again like we saw in the tutorial equals to:
\begin_inset Formula 
\[
f^{'}\left(x;d\right)=\begin{cases}
-\left\Vert d\right\Vert _{2} & x-a=0\\
-\frac{d^{T}\left(x-a\right)}{\left\Vert x-a\right\Vert _{2}} & 0<\left\Vert x-a\right\Vert _{2}<\delta
\end{cases}
\]

\end_inset


\end_layout

\begin_layout Standard
\noindent

\lang english
if 
\begin_inset Formula $\left\Vert x-a\right\Vert _{2}=\delta>0$
\end_inset

 then:
\begin_inset Formula 
\begin{align*}
f^{'}\left(x;d\right) & =\lim_{t\rightarrow0^{+}}\frac{\left|\left\Vert x+td-a\right\Vert _{2}-\left\Vert x-a\right\Vert _{2}\right|-\left|\left\Vert x-a\right\Vert _{2}-\left\Vert x-a\right\Vert _{2}\right|}{t}=\\
 & =\lim_{t\rightarrow0^{+}}\frac{\left|\left\Vert x-a+td\right\Vert _{2}-\left\Vert x-a\right\Vert _{2}\right|}{t}=\lim_{t\rightarrow0^{+}}\left|\frac{\left\Vert x-a+td\right\Vert _{2}-\left\Vert x-a\right\Vert _{2}}{t}\right|
\end{align*}

\end_inset

which is again the definition of the directional derivative:
\begin_inset Formula 
\[
f^{'}\left(x;d\right)=\left|\frac{d^{T}\left(x-a\right)}{\left\Vert x-a\right\Vert _{2}}\right|=\frac{\left|d^{T}\left(x-a\right)\right|}{\left\Vert x-a\right\Vert _{2}}
\]

\end_inset


\end_layout

\begin_layout Standard
\noindent

\lang english
to summarize:
\begin_inset Box Boxed
position "t"
hor_pos "c"
has_inner_box 1
inner_pos "t"
use_parbox 0
use_makebox 0
width "100col%"
special "none"
height "1in"
height_special "totalheight"
thickness "0.4pt"
separation "3pt"
shadowsize "4pt"
framecolor "black"
backgroundcolor "none"
status open

\begin_layout Plain Layout

\lang english
\begin_inset Formula 
\[
f^{'}\left(x;d\right)=\begin{cases}
\frac{d^{T}\left(x-a\right)}{\left\Vert x-a\right\Vert _{2}} & \left\Vert x-a\right\Vert _{2}>\delta\\
\frac{\left|d^{T}\left(x-a\right)\right|}{\left\Vert x-a\right\Vert _{2}} & \left\Vert x-a\right\Vert _{2}=\delta\\
-\frac{d^{T}\left(x-a\right)}{\left\Vert x-a\right\Vert _{2}} & 0<\left\Vert x-a\right\Vert _{2}<\delta\\
-\left\Vert d\right\Vert _{2} & \left\Vert x-a\right\Vert _{2}=0
\end{cases}
\]

\end_inset


\end_layout

\end_inset


\end_layout

