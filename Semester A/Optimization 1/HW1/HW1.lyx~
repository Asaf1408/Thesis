\begin_layout Plain Layout
\noindent

\lang english
\begin_inset Formula 
\[
\left\Vert AB\right\Vert _{c,a}=\max_{x\in R^{n}}\left\{ \left\Vert ABx\right\Vert _{a}:\left\Vert x\right\Vert _{c}\leq1\right\} \leq\max_{x\in R^{n}}\left\{ \left\Vert A\right\Vert _{b,a}\left\Vert B\right\Vert _{c,b}:\left\Vert x\right\Vert _{c}\leq1\right\} =\left\Vert A\right\Vert _{b,a}\left\Vert B\right\Vert _{c,b}
\]

\end_inset


\end_layout

\end_inset


\end_layout

